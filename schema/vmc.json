{
   "$schema": "http://json-schema.org/schema#",
   "definitions": {
      "Allele": {
         "additionalProperties": false,
         "description": "A contiguous change at a Location.",
         "example": {
            "id": "VMC:GA_012abc",
            "location_id": "VMC:GL_01234",
            "state": "A"
         },
         "properties": {
            "id": {
               "$ref": "#/definitions/Id"
            },
            "location_id": {
               "$ref": "#/definitions/Id"
            },
            "state": {
               "type": "string"
            }
         },
         "type": "object",
         "xml": {
            "name": "Allele"
         }
      },
      "Completeness": {
         "description": "Declares the `completeness` of haplotype or genotype definitions.",
         "enum": [
            "UNKNOWN",
            "PARTIAL",
            "COMPLETE"
         ],
         "type": "string"
      },
      "DateTime": {
         "format": "date-time",
         "type": "string"
      },
      "Genotype": {
         "additionalProperties": false,
         "description": "A list of Haplotypes.",
         "example": {
            "completeness": "COMPLETE",
            "haplotype_ids": [
               "H1220",
               "H19f4"
            ],
            "id": "G310a"
         },
         "properties": {
            "completeness": {
               "$ref": "#/definitions/Completeness"
            },
            "haplotype_ids": {
               "items": {
                  "$ref": "#/definitions/Id"
               },
               "type": "array"
            },
            "id": {
               "$ref": "#/definitions/Id"
            }
         },
         "type": "object"
      },
      "Haplotype": {
         "additionalProperties": false,
         "description": "A set of zero or more Alleles on a single instance of a Sequence.",
         "example": {
            "allele_ids": [
               "A0123",
               "A0124"
            ],
            "completeness": "PARTIAL"
         },
         "properties": {
            "allele_ids": {
               "items": {
                  "$ref": "#/definitions/Id"
               },
               "type": "array"
            },
            "completeness": {
               "$ref": "#/definitions/Completeness"
            },
            "id": {
               "$ref": "#/definitions/Id"
            },
            "location_id": {
               "$ref": "#/definitions/Id"
            }
         },
         "type": "object"
      },
      "Id": {
         "description": "Uniquely identifies a specific instance of an object within a document.",
         "example": "NCBI:NM_000551.3",
         "type": "string",
         "xml": {
            "attribute": true
         }
      },
      "Identifier": {
         "additionalProperties": false,
         "description": "A <namespace,accession> pair that refers to an object.",
         "properties": {
            "accession": {
               "description": "unique key within namespace",
               "example": "NM_000551.3",
               "type": "string"
            },
            "namespace": {
               "description": "authority",
               "example": "refseq",
               "type": "string"
            }
         },
         "required": [
            "namespace",
            "accession"
         ],
         "type": "object"
      },
      "Identifiers": {
         "additionalProperties": false,
         "description": "A list of Identifiers",
         "example": {
            "H1220": [
               {
                  "accession": "APOE-\u03b52",
                  "namespace": "whoknows"
               }
            ],
            "H19f4": [
               {
                  "accession": "APOE-\u03b51",
                  "namespace": "whoknows"
               }
            ],
            "S491f": [
               {
                  "accession": "NM_000551.2",
                  "namespace": "NCBI"
               },
               {
                  "accession": "BLAHBLAH",
                  "namespace": "ENST"
               }
            ]
         },
         "type": "object"
      },
      "Interval": {
         "allOf": [
            {
               "$ref": "#/internal/PositionBase"
            },
            {
               "additionalProperties": false,
               "example": {
                  "end": 22,
                  "start": 11,
                  "type": "Interval"
               },
               "properties": {
                  "end": {
                     "nullable": true,
                     "type": "integer"
                  },
                  "start": {
                     "nullable": true,
                     "type": "integer"
                  },
                  "type": {
                     "type": "string"
                  }
               },
               "required": [
                  "start",
                  "end"
               ],
               "type": "object"
            }
         ]
      },
      "Location": {
         "properties": {
            "id": {
               "example": "GL_tnVGwWWN0L_fEYK4hGF1Tzm7JULAkm2Z",
               "type": "string"
            },
            "interval": {
               "$ref": "#/definitions/Interval"
            },
            "sequence_id": {
               "example": "GS_ss8r_wB0-b9r44TQTMmVTI92884QvBiB",
               "type": "string"
            }
         },
         "type": "object"
      },
      "Meta": {
         "properties": {
            "generated_at": {
               "$ref": "#/definitions/DateTime"
            },
            "version": {
               "default": "0",
               "type": "string"
            }
         },
         "type": "object"
      },
      "NestedInterval": {
         "allOf": [
            {
               "$ref": "#/internal/PositionBase"
            },
            {
               "properties": {
                  "inner": {
                     "$ref": "#/definitions/Interval"
                  },
                  "outer": {
                     "$ref": "#/definitions/Interval"
                  },
                  "type": {
                     "type": "string"
                  }
               },
               "type": "object"
            }
         ],
         "example": {
            "inner": {
               "end": 30,
               "start": 29,
               "type": "Interval"
            },
            "outer": {
               "end": 39,
               "start": 20,
               "type": "Interval"
            },
            "type": "NestedInterval"
         }
      },
      "Position": {
         "description": "A Position represents a span of sequence.  Positions are always represented by contiguous spans using interbase coordinates.",
         "oneOf": [
            {
               "$ref": "#/definitions/Interval"
            },
            {
               "$ref": "#/definitions/NestedInterval"
            },
            {
               "$ref": "#/definitions/RangedInterval"
            }
         ]
      },
      "RangedInterval": {
         "allOf": [
            {
               "$ref": "#/internal/PositionBase"
            },
            {
               "properties": {
                  "end": {
                     "$ref": "#/definitions/Interval"
                  },
                  "start": {
                     "$ref": "#/definitions/Interval"
                  },
                  "type": {
                     "type": "string"
                  }
               },
               "type": "object"
            }
         ],
         "example": {
            "end": {
               "end": 39,
               "start": 30,
               "type": "Interval"
            },
            "start": {
               "end": 29,
               "start": 20,
               "type": "Interval"
            },
            "type": "RangedInterval"
         }
      },
      "Sequence": {
         "type": "string"
      },
      "TextVariation": {
         "allOf": [
            {
               "$ref": "#/internal/IdentifiableObject"
            },
            {
               "properties": {
                  "definition": {
                     "description": "The textual representation of variation as provided by the client.",
                     "type": "string"
                  },
                  "related": {
                     "$ref": "#/internal/RelatedVariation"
                  },
                  "type": {
                     "default": "TextVariation",
                     "type": "string"
                  }
               },
               "type": "object"
            }
         ],
         "type": "object"
      },
      "VMCBundle": {
         "additionalProperties": false,
         "properties": {
            "alleles": {
               "default": {},
               "type": "object"
            },
            "curie_map": {
               "default": {},
               "description": "maps CURIE prefixes to IRIs",
               "type": "object"
            },
            "genotypes": {
               "default": {},
               "type": "object"
            },
            "haplotypes": {
               "default": {},
               "type": "object"
            },
            "identifiers": {
               "$ref": "#/definitions/Identifiers",
               "default": {}
            },
            "locations": {
               "default": {},
               "type": "object"
            },
            "meta": {
               "$ref": "#/definitions/Meta",
               "default": {}
            }
         },
         "required": [
            "meta",
            "locations",
            "alleles",
            "haplotypes",
            "genotypes",
            "identifiers",
            "curie_map"
         ],
         "type": "object"
      },
      "Variation": {
         "properties": {
            "id": {
               "type": "string"
            },
            "type": {
               "enum": [
                  "TextVariation",
                  "SequenceVariation"
               ],
               "type": "string"
            }
         },
         "type": "object"
      }
   },
   "internal": {
      "IdentifiableObject": {
         "properties": {
            "id": {
               "type": "string"
            }
         },
         "type": "object"
      },
      "PositionBase": {
         "properties": {
            "type": {
               "enum": [
                  "Interval",
                  "NestedInterval",
                  "RangedInterval"
               ],
               "type": "string"
            }
         },
         "type": "object"
      },
      "RelatedVariation": {
         "properties": {
            "id": {
               "type": "string"
            },
            "relationship": {
               "enum": [
                  "PARSED_VARIATION"
               ],
               "type": "string"
            }
         },
         "type": "object"
      }
   },
   "title": "VMC Definitions",
   "type": "object"
}